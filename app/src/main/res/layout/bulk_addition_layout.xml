<androidx.viewpager.widget.ViewPager
    android:id="@+id/viewpager"
    android:layout_below="@id/tablayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" ></androidx.viewpager.widget.ViewPager>
